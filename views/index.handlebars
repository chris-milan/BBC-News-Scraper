{{#each articles}}

<div id="parallax-container valign-wrapper" class="parallax-container article-content" id={{this._id}}
    style="background-image: url()">

    <h3>
        <a href="{{this.link}}" class="main-links" target="_blank">{{this.title}}</a>
    </h3>

    <div class="summary-container">
        <form action="/save/{{this._id}}" method="POST">
            <button type="submit" class="button" value="{{this.status}}"><i class="fa fa-heart heart-icon"
                    aria-hidden="true"></i>&nbsp; Save Article</button>
            <button class="button modal-trigger" href="#notes-modal{{this._id}}">Notes</button>
        </form>

    </div>
    <div class="parallax"><img src="{{this.image}}"></div>
</div>


{{!-- Main Modal --}}
<div id="notes-modal{{this._id}}" class="modal" role="dialog">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <div class="note-header">Notes</div></br></br>"{{this.title}}"
                </h4>
            </div>
            <div class="modal-body">

                {{#if this.note}}
                {{#each this.note}}

                <div class="panel panel-default">
                    <div class="panel-body note-body">

                        <ul><i class="fas fa-circle"></i>&nbsp;&nbsp;{{this.body}}</ul>

                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4>No notes for this article yet.</h4>
                    </div>
                </div>
                {{/if}}
                <div class="form-group">
                    <input id="note-input{{this._id}}" class="form-control" placeholder=""></input>

                </div>
                <button type="button" id="add-note" class="button" data-id={{this._id}}><i
                        class="fas fa-plus-circle"></i>&nbsp;Add Note</button>
                <button type="button" id="delete-note" class="button" data-note-id={{this._id}}
                    data-article-id={{this.id}}><i class="fas fa-minus-circle"></i>&nbsp;Delete Notes</button>
            </div>

        </div>
    </div>
</div>

{{/each}}